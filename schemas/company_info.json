{
  "name": "company_info",
  "description": "Basic company information schema",
  "fields": {
    "company_name": {
      "type": "string",
      "description": "Official company name",
      "required": true
    },
    "industry": {
      "type": "string",
      "description": "Primary industry or sector",
      "required": false
    },
    "description": {
      "type": "string",
      "description": "Brief company description (1-2 sentences)",
      "required": false
    },
    "headquarters": {
      "type": "string",
      "description": "Location of headquarters (city, state/country)",
      "required": false
    },
    "founded_year": {
      "type": "string",
      "description": "Year the company was founded",
      "required": false
    },
    "employee_count": {
      "type": "string",
      "description": "Approximate number of employees or range",
      "required": false
    },
    "website": {
      "type": "string",
      "description": "Primary website URL",
      "required": true
    }
  }
}
